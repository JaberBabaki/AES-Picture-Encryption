<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay_item"
        android:layout_width="match_parent"
        android:layout_height="68dip"
        android:layout_margin="2dip"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/phonecall" android:layout_marginLeft="10dip"/>

        <android.simplify.contact.customcontrol.NewControlTextView
            android:id="@+id/txt_title"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="8dip"
            android:layout_weight="0.5"
            android:gravity="right|center"
            android:singleLine="false"
            android:text="اضافه کردن"
            android:textColor="#000000"
            android:textSize="12dip" />

        <android.simplify.contact.customcontrol.CircularImageView
            android:id="@+id/img_pro"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:layout_margin="4dip"
            android:src="@drawable/user" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:src="#eeeeee" android:layout_marginLeft="4dip" android:layout_marginRight="4dip"/>

</LinearLayout>